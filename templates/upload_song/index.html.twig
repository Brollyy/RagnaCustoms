{% extends 'base.html.twig' %}

{% block title %}Hello UploadSongController!{% endblock %}

{% block body %}
<div class="widget-box">

    {{ form_start(form) }}
    <div class="form-row">
        <!-- FORM ITEM -->
        <div class="form-item">
            <!-- FORM INPUT -->
            <div class="form-input">
                {{ form_row(form.zipFile) }}
            </div>
        </div>
    </div>
    <div class="form-row">
        <!-- FORM ITEM -->
        <div class="form-item">
            <!-- BUTTON -->
            <button class="button medium secondary">{{ "Upload"|trans }}</button>
            <!-- /BUTTON -->
        </div>
        <!-- /FORM ITEM -->
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}
