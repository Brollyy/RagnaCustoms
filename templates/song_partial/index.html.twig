{% import "songs/macros/song.html.twig" as macro_song %}

{% for song in songs %}
    {% if loop.index == 1 and bigOneDisabled is not defined %}
        {{ macro_song.featuredBox(song) }}
    {% endif %}
    {% if loop.index == 1%}
<table class="featured-table table table-sm">
    <tr>
        <th>{{ "Song"|trans }}</th>
        <th>{{ "Mapper"|trans }}</th>
        <th>{{ "Rating"|trans }}</th>
        <th></th>
    </tr>
    {% endif %}
    {% if loop.index != 1 or bigOneDisabled is defined %}
        <tr>
            <td>
                <div class="d-flex ">
                    <a href="{{ url('song_detail',{slug:song.slug}) }}"><img src="{{ song.cover }}" class="small-cover" alt="cover"/></a>
                    <div class="song pl-1">
                        <div class="title"><a href="{{ url('song_detail',{slug:song.slug}) }}">{{ song.name }}</a></div>
                        <div class="author"><a
                                    href="{{ url('home') }}?search=artist%3A{{ song.authorName|url_encode }}">{{ song.authorName }}</a>
                        </div>
                    </div>
                </div>
            </td>
            <td>
                <div class="mapper"><a
                            href="{{ url('mapper_profile', {username:song.user.username}) }}">{{ song.mapper }}</a>
                </div>
                <div class="level-list">
                    {% for diff in song.songDifficulties %}
                        <div class='level {% if diff.isRanked %}is-ranked{% endif %}' style="background-color:#{{ diff.difficultyRank.color }};">
                            {% if diff.isRanked %}<i class="fas fa-star" style="color:#{{ diff.difficultyRank.color }};"></i>{% endif %}
                            <span>{{ diff.difficultyRank.level }}</span>
                        </div>
                    {% endfor %}
                </div>
            </td>
            <td class="small-col">{% include 'songs/partial/downupvote.html.twig' with {song:song} %}</td>
            <td class="download">
                {% set downloaded = downloadsService.alreadyDownloaded(song) %}
                <div class="on-hover">
                    <div class="big-buttons d-none">
                        <a href="ragnac://install/{{ song.id }}" class="one-click"><i class="fas fa-download"></i><br/>1 click</a>
                        <a href="{{ url("song_direct_download",{id:song.id}) }}" class="ddl"><i class="fas fa-download"></i><br/>ZIP</a>
                    </div>
                    <a href="#"
                       data-toggle="modal"
                       data-target="#previewSong"
                       data-refresh="true"
                       data-url="{{url("partial_preview_song",{id:song.id})}}"
                       class="ajax-load preview-popup">
                        <i class="fas fa-play-circle"></i>
                    </a>

                    <a href="#"
                       class="open-download-buttons text-success ml-1">
                        <i class="fas fa-download"></i>
                    </a>
                </div>
                <div class="non-hover">
                    {% if downloaded %}
                        <i class="fas fa-check"></i>
                    {% endif %}
                </div>
            </td>
        </tr>
    {% endif %}
{% else %}
    <p class="text-warning">{{ "No song found"|trans }}</p>
    {% endfor %}
</table>