<div class="row mb-4">
    {% if pagination is not null %}
        {% import "@Pagination/Pagination/macro.twig" as macro_pagination %}
        <div class="text-left col-md-12">
            {{ "Showing %SongCount% on %SongTotal%"|trans|replace({"%SongCount%":pagination.entities|length,"%SongTotal%":pagination.count}) }}
        </div>

        <div class="text-center  col-md-12 pagination-rhokapa">
{#            {% if app.request.get("ppage"~pagination.identifier) < pagination.pages %}#}
            <a class="no-decoration ml-3 {% if app.request.get("ppage"~pagination.identifier,1) == 1 %}disabled{% endif %}" href="{{ url(app.request.get('_route'),app.request.get('_route_params')|merge(app.request.query.all)|merge({("ppage"~pagination.identifier):1})) }}">{{ "First"|trans }}</a>
            <a class="no-decoration ml-3 {% if app.request.get("ppage"~pagination.identifier,1) == 1 %}disabled{% endif %}" href="{{ url(app.request.get('_route'),app.request.get('_route_params')|merge(app.request.query.all)|merge({("ppage"~pagination.identifier):pagination.current-1})) }}">{{ "Prev"|trans }}</a>

            {#            {% endif %}#}


            &nbsp;{{ macro_pagination.paginate(pagination,false) }}

{#            {% if pagination.current > 1 %}#}
{#                <a class="no-decoration ml-3" href="{{ url(app.request.get('_route'),app.request.get('_route_params')|merge(app.request.query.all)|merge({("ppage"~pagination.identifier):pagination.current-1})) }}">{{ "Previous page"|trans }}</a>#}
{#            {% endif %}#}

{#            {% if app.request.get("ppage"~pagination.identifier) < pagination.pages %}#}
            <a class="no-decoration ml-3 {% if app.request.get("ppage"~pagination.identifier) >= pagination.pages %}disabled{% endif %}" href="{{ url(app.request.get('_route'),app.request.get('_route_params')|merge(app.request.query.all)|merge({("ppage"~pagination.identifier):pagination.current+1})) }}">{{ "Next"|trans }}</a>
            <a class="no-decoration ml-3 {% if app.request.get("ppage"~pagination.identifier) >= pagination.pages %}disabled{% endif %}" href="{{ url(app.request.get('_route'),app.request.get('_route_params')|merge(app.request.query.all)|merge({("ppage"~pagination.identifier):pagination.pages})) }}">{{ "Last"|trans }}</a>
{#            {% endif %}#}
        </div>
    {% endif %}
    {# {{ macro_pagination.seeMore(songs,"see more"|trans,'btn',{"parent":"#table-song","remove":"#see-more-place"}) }} #}
</div>