{% extends 'base.html.twig' %}

{% block title %}RagnaCustoms.com, Your favorites custom songs for Ragnarock VR{% endblock %}

{% block body %}
    <header>
        <div {{ stimulus_controller('homepage') }} class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h1>Search over <span class="song-counter">{{ songService.count() }}</span> custom songs for<br/>
                        Ragnarock VR on Steam and Meta Quest
                    </h1>
                    <form method="GET" action="{{ url('song_library') }}" class=" search-and-filter">
                        <div class="input-group">
                            <button class="btn btn-primary dropdown-toggle" style='border-radius: 0!important;'
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">by <i>Anything</i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" data-search-prefix='' href="#">Anything</a>
                                <a class="dropdown-item" data-search-prefix='author:' href="#">Author</a>
                                <a class="dropdown-item" data-search-prefix='title:' href="#">Title</a>
                                <a class="dropdown-item" data-search-prefix='mapper:' href="#">Mapper</a>
                                <a class="dropdown-item" data-search-prefix='genre:' href="#">Genre</a>
                            </div>
                            <input type="text" value="{{ app.request.get('search') }}"
                                   class="form-control form-control-lg"
                                   placeholder="{{ "Search an artist, title, mapper or genre"|trans }}" name="search"
                                   id="search">
                            <button type="submit" name="search_btn" value="1"
                                    class="btn">{{ "Search"|trans }}</button>
                        </div>
                    </form>

                    <a href="{{ url('song_library') }}"
                       class="header-link float-right">{{ "Advanced search"|trans }}</a>
                </div>
                <div class="be-patreon col-md-4 text-center pt-5">
                    {{ "Enjoying RagnaCustoms?"|trans }}<br/>
                    {{ "Help us with hosting fees"|trans }}
                    <br/>
                    <a class="pt-2" href="https://www.patreon.com/bePatron?u=6877976" target="_blank"><i
                                class="fab fa-patreon"></i> {{ "Become a Patron!"|trans }}</a>
                </div>
            </div>
        </div>
    </header>
    <div class="container homepage" {{ stimulus_controller('homepage') }}>
