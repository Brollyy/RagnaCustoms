{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="widget-box">
<form method="post" class="form">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <div class="form-row">
        <!-- FORM ITEM -->
        <div class="form-item">
            <!-- FORM INPUT -->
            <div class="form-input">
                <label for="inputUsername">Username</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" required autofocus>
            </div>
            <!-- /FORM INPUT -->
        </div>
        <!-- /FORM ITEM -->
    </div>
    <!-- /FORM ROW -->

    <!-- FORM ROW -->
    <div class="form-row">
        <!-- FORM ITEM -->
        <div class="form-item">
            <!-- FORM INPUT -->
            <div class="form-input">
                <label for="inputPassword">{{ "Password"|trans }}</label>

                <input type="password" name="password" id="inputPassword" required>
            </div>
            <!-- /FORM INPUT -->
        </div>
        <!-- /FORM ITEM -->
    </div>
    <!-- /FORM ROW -->

    <!-- FORM ROW -->
    <div class="form-row space-between">
        <!-- FORM ITEM -->
        <div class="form-item">
            <!-- CHECKBOX WRAP -->
            <div class="checkbox-wrap">
                <input type="checkbox" name="_remember_me" id="login-remember" checked>

                <!-- CHECKBOX BOX -->
                <div class="checkbox-box">
                    <!-- ICON CROSS -->
                    <svg class="icon-cross">
                        <use xlink:href="#svg-cross"></use>
                    </svg>
                    <!-- /ICON CROSS -->
                </div>
                <!-- /CHECKBOX BOX -->
                <label for="login-remember">{{ "Remember Me"|trans }}</label>
            </div>
            <!-- /CHECKBOX WRAP -->
        </div>
        <!-- /FORM ITEM -->

        <!-- FORM ITEM -->
        <div class="form-item">
            <!-- FORM LINK -->
            <a class="form-link" href="{{ url("app_forgot_password_request") }}">{{ "Forgot Password?"|trans }}</a> <span class="white">/</span> <a class="form-link" href="{{ url('app_register') }}">{{ "Register"|trans }}</a>

            <!-- /FORM LINK -->
        </div>
        <!-- /FORM ITEM -->
    </div>
    <!-- /FORM ROW -->

    <!-- FORM ROW -->
    <div class="form-row">
        <!-- FORM ITEM -->
        <div class="form-item">
            <!-- BUTTON -->
            <button class="button medium secondary">{{ "Login to your Account"|trans }}</button>
            <!-- /BUTTON -->
        </div>
        <!-- /FORM ITEM -->
    </div>


    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}


</form>
    </div>
{% endblock %}
