{#                       data-toggle="switchbutton"#}
{#                       data-size="sm"#}
{#                       data-onlabel="Dark mode"#}
{#                       data-offlabel="Light "#}
{#                       data-onstyle="dark"#}
{#                       data-offstyle="light"#}
{#                        {{ app.request.cookies.get('light-mode') == "dark" ?"checked='checked'":'' }}#}
{#                />#}
{#            </li>#}
        </ul>
    </div>

</nav>
<div class="banner viking-text text-level-5 text-center">
    <a href="{{ url("score_season_ranking") }}">{{ currentSeason.label }}</a> ends in <span id="demo"></span>
</div>
<div class="container">

    <div class="runes">
        <img src="/apps/runes.png" style="max-width:100%" alt="runes"/></div>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-dismissible alert-{{ label }}">
                {{ message|trans }}
            </div>
        {% endfor %}
    {% endfor %}


    {% block body %}

    {% endblock %}
</div>
{% block endBody %}
{% endblock %}
<hr/>
<div class="p-3 text-center">
    discuss with us :&nbsp;
