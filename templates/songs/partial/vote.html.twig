<a href="#" class="button disabled with-only-icon popup-review-trigger song-review"  data-toggle="modal" data-target="#reviewSong"
     data-replace-selector=".song-vote-{{ song.id }}"
     data-url="{{ url('song_review',{id:song.id}) }}"
     data-song-id="{{ song.id }}">
    <div class="rating-list d-flex flex-row">
        {% set rate = song.countVotes is not null ? (song.totalVotes/song.countVotes)|round(0,"floor") :0 %}
        {% for i in 0..4 %}
            <div class="rating {% if rate > i %}filled text-warning{% endif %}">
                <i class="{% if rate > i %}fas{% else%}far{% endif%} fa-star"></i>
            </div>
        {% endfor %}
    </div>
</a>


