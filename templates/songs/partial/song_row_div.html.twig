<div class="songs">
    <h2>Songs</h2>
{% for song in songs %}
    <div class="d-flex align-items-center">
        <a href="{{ url('song_detail',{slug:song.slug}) }}">
            <img src="{{ song.cover }}" class="small-cover" alt="cover" style="width:50px;"/>
        </a>
        <div class="song pl-1">
            <div class="title text-warning">
                {{ song|raw }}
            </div>
            {% include 'songs/partial/artists.html.twig' with {song : song} %}
        </div>
    </div>
    <hr class="m-1"/>
    {% endfor %}
</div>
