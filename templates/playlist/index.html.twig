{% extends 'base.html.twig' %}

{% block title %}My playlists{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <h1>{{ "All your playlists"|trans }}</h1>
        <table class="table table-sm">
            <tr>
                <th>{{ "Label"|trans }}</th>
                <th>{{ "Songs"|trans }}</th>
                <th>{{ "Public"|trans }}</th>
                <th></th>
            </tr>
{% for playlist in playlists %}
    <tr>
        <th>{{ playlist.label }}</th>
        <th>{{ playlist.songs|length }}</th>
        <th>{{ playlist.isPublic?"<i class='fas fa-check text-success'></i>":"<i class='fas fa-close text-danger'></i>" }}</th>
        <th>
            <a href="{{ url("playlist_show",{id:playlist.id}) }}"><i class="fas fa-eye"></i></a>
            <a class="text-info"  href="{{ url("playlist_edit",{id:playlist.id}) }}"><i class="fas fa-edit"></i></a>
            <a class="text-danger"
               data-confirm="{{ "You are going to delete a playlist, do you want to continue?" }}"
               href="{{ url("playlist_delete",{id:playlist.id}) }}"><i class="fas fa-trash"></i></a>
        </th>
    </tr>
    {% else %}
    <tr>
        <td>{{ "No playlist for now"|trans }}</td>
    </tr>
            {% endfor %}
        </table>
    </div>
</div>


{% endblock %}
