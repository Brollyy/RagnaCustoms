{% extends 'base.html.twig' %}

{% block title %}My playlists{% endblock %}
{% block stylesheets %}
  {{ parent() }}
{% endblock %}
{% block body %}
<div class="container-fluid">

  <div class="row mt-3">
    <div class="col-md-2">
      {% include 'user/partial/_left_part_user.html.twig' %}
    </div>
    <div class="col-md-10">
      <h2>{{ "Playlists"|trans }}</h2>
      <div class="row">
        <div class="col-md-3 mb-5">
          {% include 'playlist/partial/card_plus.html.twig' %}
        </div>
        {% for playlist in app.user.playlists %}
          <div class="col-md-3 mb-5">
              {% include 'playlist/partial/card.html.twig' %}
          </div>
        {% else %}
          <div class="col-md-3 mb-5">
            <div class="playlist-placeholder">
              No Active playlist
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    {% endblock %}
